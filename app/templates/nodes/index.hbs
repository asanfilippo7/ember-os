{{#if isFirstPage}}
<!--<h3>Sort by: {{#link-to 'nodes.recent'}}Recent nodes{{/link-to}}</h3>-->
{{/if}}

<h3>Search by tag: {{input value=keyword action="search" on="enter"}}</h3>

{{#unless isFirstPage}}
<h3>Page {{page}} of all nodes</h3>
{{/unless}}

<ul>
{{#each model as |node|}}
    <li>
        {{#link-to 'nodes.node' node}}<h3>{{node.title}}</h3>{{/link-to}}
        <p>Last modified: {{node.dateModified}}</p>
        {{#if node.tags}}
        <p>Tags:</p>
        <ul>
            {{#each node.tags as |tag|}}
                {{#link-to 'nodes.tag' tag.id}}<li>{{tag.id}}</li>{{/link-to}}
            {{/each}}
        </ul>
        {{/if}}
<!--        {{contribs}}-->
        <br>
    </li>
{{/each}}
</ul>

<h3>Navigation:</h3>
{{#unless isFirstPage}}
    {{#link-to (query-params page=prevPage)}}Previous{{/link-to}}
{{/unless}}

{{#each PageRange as |num|}}
    {{#link-to (query-params page=num)}}{{num}}{{/link-to}}
{{/each}}

{{#unless isLastPage}}
    {{#link-to (query-params page=nextPage)}}Next{{/link-to}}
{{/unless}}



